{
  "name": "dummy-forge",
  "version": "1.0.0",
  "description": "Educational data generation tool",
  "homepage": "https://example.com/dummy-forge",
  "author": {
    "name": "Dummy Forge Team",
    "email": "support@example.com"
  },
  "main": "dist/electron/main.js",
  "private": true,
  "scripts": {
    "dev": "concurrently \"vite\" \"tsx server/index.ts\" \"tsc -p tsconfig.node.json --watch\" \"wait-on dist/electron/main.js && cross-env VITE_DEV_SERVER_URL=http://localhost:5190 electron dist/electron/main.js\"",
    "build": "tsc -p tsconfig.node.json && vite build && electron-builder",
    "preview": "vite preview",
    "lint": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@faker-js/faker": "^8.4.0",
    "better-sqlite3": "^9.2.2",
    "date-fns": "^3.0.6",
    "express": "^4.18.2",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.8.2",
    "libphonenumber-js": "^1.10.51",
    "papaparse": "^5.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.49.3",
    "xlsx": "^0.18.5",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/papaparse": "^5.5.2",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/xlsx": "^0.0.36",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.dummyforge.app",
    "productName": "Dummy Forge",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "src/icons/icon.png"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "src/icons/icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "snap"
      ],
      "icon": "src/icons/icon.png",
      "maintainer": "Dummy Forge Team <support@example.com>"
    }
  }
}
